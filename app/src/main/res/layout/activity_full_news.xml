<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".FullNews">


    <androidx.cardview.widget.CardView
            android:layout_width="292dp"
            android:layout_height="453dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/black"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.927" app:layout_constraintHorizontal_bias="0.491"
            android:id="@+id/cardView">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView

                    android:textColor="@color/white"
                    android:textStyle="bold|italic"
                    android:textSize="16sp"
                    android:layout_width="246dp"
                    android:layout_height="101dp" android:id="@+id/textView7"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.079"
                    app:layout_constraintHorizontal_bias="0.478"/>
            <TextView
                    android:layout_width="244dp"
                    android:textColor="@color/white"
                    android:textStyle="bold|italic"
                    android:textSize="16sp"
                    android:maxLines="6"
                    android:layout_height="125dp" android:id="@+id/textView8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.466"/>
            <TextView
                    android:textColor="@color/white"
                    android:autoLink="web"
                    android:textStyle="bold|italic"
                    android:textSize="16sp"
                    android:layout_width="243dp"
                    android:layout_height="87dp" android:id="@+id/textView9"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.849"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.448"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="20dp"
            android:layout_height="218dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.262">
        <ImageView
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="match_parent" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/imageView7"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>